<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16.01dp">

        <FrameLayout
            android:layout_width="144.5dp"
            android:layout_height="92.03dp">

            <ImageView
                android:id="@+id/video_contents_video_iv_video_image"
                android:layout_width="144.5dp"
                android:layout_height="92.03dp" />

            <ImageView
                android:id="@+id/video_icon"
                android:layout_width="29.55dp"
                android:layout_height="29.55dp"
                android:layout_gravity="bottom"
                android:src="@drawable/play_inside_content_icon" />

            <TextView
                android:id="@+id/video_contents_video_tv_contents_time"
                android:layout_width="29dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="9dp"
                android:background="#000000"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="7dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.09dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_contents_video_tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.4dp"
                android:text="BTS - Anpanman fancam focus on Jungkuk king"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/video_contents_video_tv_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#BTS #Anpanman #Jungkuk"
                android:textColor="#B1B1B1"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>