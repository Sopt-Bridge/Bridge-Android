<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/video_contents_vv_video"
            android:layout_width="wrap_content"
            android:layout_height="186.95dp" />
        <Button
            android:layout_width="61.36dp"
            android:layout_height="61.36dp"
            android:background="@drawable/play_inside_content_icon"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/video_contents_iv_video_cancel"
            android:layout_width="17.79dp"
            android:layout_height="17.79dp"
            android:layout_marginLeft="18.25dp"
            android:layout_marginTop="18.25dp"
            android:background="@drawable/content_x_btn" />
</FrameLayout>
    //1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            //2
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="13dp"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/video_contents_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="46.98dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    android:textColor="#000407"
                    android:text="Jsthis - One of them in university festival" />
                <TextView
                    android:id="@+id/video_contents_tv_contents_info"
                    android:layout_width="match_parent"
                    android:layout_height="27.8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="13dp"
                    android:textColor="#000407"
                    android:text="credit : Youtube Indigo" />
            </LinearLayout>
            //3
         <LinearLayout
             android:layout_width="23.18dp"
             android:layout_height="78.68dp"
             android:layout_marginTop="16.6dp"
             android:layout_marginRight="14.21dp"
             android:layout_marginLeft="3.83dp"
             android:orientation="vertical">
            <Button
                android:id="@+id/video_contents_bt_library"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginBottom="16.25dp"
                android:layout_gravity="center"
                android:background="@drawable/add_to_library_normal_icon" />

            <Button
                android:id="@+id/video_contents_bt_feedback"
                android:layout_width="23.21dp"
                android:layout_height="19.13dp"
                android:layout_gravity="top"
                android:background="@drawable/feedback_normal_icon" />
         </LinearLayout>
        </LinearLayout>
        //4
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27.8dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="5dp"
                android:paddingRight="16.3dp"
                android:orientation="horizontal">


                <TextView
                android:id="@+id/video_contents_tv_hash"
                android:layout_width="0dp"
                android:layout_height="27.8dp"
                    android:layout_weight="1"
                android:textSize="12dp"
                android:textColor="#B1B1B1"
                android:textStyle="bold"
                android:text="#Hiphop #J-this " />

                <TextView
                    android:id="@+id/video_contents_tv_recommand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/video_contents_bt_recommend"
                    android:layout_marginRight="10.89dp"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:text="36"/>

                <Button
                    android:id="@+id/video_contents_bt_recommend"
                    android:layout_width="18.85dp"
                    android:layout_height="19.41dp"
                    android:background="@drawable/good_normal_btn" />



    </LinearLayout>

  <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TabLayout
          android:id="@+id/video_contents_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:tabGravity="fill"
          app:tabMode="fixed"
          android:background="#FFFFFF"
          app:tabIndicatorColor="#E31C9E"
          app:tabTextColor="#B1B1B1"
          app:tabSelectedTextColor="#E31C9E">

      </android.support.design.widget.TabLayout>
  </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/video_contents_vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>