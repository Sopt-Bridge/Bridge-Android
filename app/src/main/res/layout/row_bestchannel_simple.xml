<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bestchannel_image_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/nuest10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bestchannel_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="#NU'EST"
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bestchannel_text_subscribe_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구독자 234,234,234"
            android:textColor="#333333"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bestchannel_layout_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bestchannel_image_subscribe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/subscribe_normal_btn" />

        <TextView
            android:id="@+id/bestchannel_text_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Subscribe"
            android:textColor="#E31C9E"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>