<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bestchannel_image_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/default_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bestchannel_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="#NU'EST" />

        <TextView
            android:id="@+id/bestchannel_text_subscribe_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="10dp"
            android:textStyle="bold"
            tools:text="구독자 234,234,234" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bestchannel_layout_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bestchannel_image_subscribe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/subscribe_normal_btn" />

        <!--<com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bestchannel_image_subscribe"
            app:btn_color="#E1E1E1"
            app:btn_fill_color="#E31C9E"
            app:allow_random_color="true"
            app:siShape="@drawable/subscribe_normal_btn"/>-->
        <TextView
            android:id="@+id/bestchannel_text_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Subscribe"
            android:textColor="#D1D1D1"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>