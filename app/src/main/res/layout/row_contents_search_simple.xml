<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contents_layout_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/contents_image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/google_logo" />

        <ImageView
            android:id="@+id/contents_image_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|left"
            app:srcCompat="@drawable/home_video_thumnail_icon" />

        <TextView
            android:id="@+id/contents_text_count"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="9dp"
            android:background="#000000"
            android:gravity="center"
            android:minWidth="25dp"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="8dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contents_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="3dp"
            android:text="BTS - Anpanman fancam focus on Jungkuk"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contents_text_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:text="#BTS #bangtan #friends"
            android:textColor="#B1B1B1"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>