<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280.35dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round"
    android:padding="20dp"
    android:id="@+id/feedback_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/feedback_X_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/feedback_cancel_x_btn"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="18sp"
            android:layout_marginBottom="15.36dp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="222.73dp"
                android:layout_height="114.25dp"
                android:orientation="vertical"
                android:background="#F7F7F7">

                <EditText
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:height="100dip"
                    android:padding="7dp"
                    android:background="@drawable/stroke"
                    android:inputType="textMultiLine"
                    android:hint="contents"
                    >

                </EditText>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/feedback_Send_Btn"
        android:layout_width="61.44dp"
        android:layout_height="29.75dp"
        android:layout_gravity="center"
        android:background="@drawable/round_btn_send"
        android:text="Send"
        android:layout_marginTop="22.19dp"
        android:textColor="#FFFFFF" />



</LinearLayout>