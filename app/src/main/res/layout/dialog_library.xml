<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="258dp"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/library_image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:padding="60dp"
        app:srcCompat="@drawable/library_no_image_logo" />

    <LinearLayout
        android:id="@+id/library_layout_color"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/library_edit_name"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0.78"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Enter a GroupName"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Color code"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/library_edit_color"
                android:layout_width="81dp"
                android:layout_height="23dp"
                android:alpha="0.78"
                android:background="#FFFFFF"
                android:ems="7"
                android:gravity="center"
                android:hint="#000000"
                android:inputType="text"
                android:textSize="15dp" />
        </LinearLayout>

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/library_pickerview"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            app:palette="@drawable/color_picker"
            app:selector="@drawable/color_picker_select" />
    </LinearLayout>

    <TextView
        android:id="@+id/library_text_done"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Done"
        android:textColor="#E31C9E"
        android:textSize="17dp"
        android:textStyle="bold" />
</LinearLayout>