<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.01dp"
        android:layout_marginLeft="20dp">

        <FrameLayout
            android:layout_width="144.5dp"
            android:layout_height="92.03dp">

            <ImageView
                android:id="@+id/video"
                android:layout_width="144.5dp"
                android:layout_height="92.03dp" />

            <ImageView
                android:id="@+id/video_icon"
                android:layout_width="29.55dp"
                android:layout_height="29.55dp"
                android:src="@drawable/play_inside_content_icon"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/video_time"
                android:layout_width="29.55dp"
                android:layout_height="15.76dp"
                android:layout_PaddingRight="9.57dp"
                android:layout_PaddingBottom="7.39dp"
                android:gravity="center"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:textSize="7dp"
                android:layout_gravity="bottom|right"
                android:text="00:00" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.09dp"
            android:layout_marginRight="24.42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.4dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="BTS - Anpanman fancam focus on Jungkuk king" />

            <TextView
                android:id="@+id/hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#B1B1B1"
                android:text="#BTS #Anpanman #Jungkuk" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>