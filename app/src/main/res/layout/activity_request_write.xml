<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="top"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/request_text_write"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="right|center_vertical"
                android:background="#FFFFFF"
                android:padding="17dp"
                android:text="Done"
                android:textColor="#333333"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/request_image_back"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_gravity="center_vertical"
                android:padding="17dp"
                app:srcCompat="@drawable/back_btn" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Interpretation"
                android:textColor="#333333"
                android:textSize="18dp"
                android:textStyle="bold" />
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/request_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kim name"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/request_text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.63"
                    android:text="04/18/2018"
                    android:textColor="#000000"
                    android:textSize="13dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/request_edit_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="#F7F7F7"
                android:hint="제목을 입력해주세요"
                android:inputType="text"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:textColor="#000000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/request_edit_url"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="#F7F7F7"
                android:hint="링크를 입력해주세요"
                android:inputType="text"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:textColor="#000000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/request_edit_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:gravity="top"
                android:hint="내용을 입력해주세요"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:padding="13dp"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
